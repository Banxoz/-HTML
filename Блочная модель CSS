.parent {
  border: 2px solid red; /* Красная рамка — родительский блок */
  display: flex;         /* Включаем Flexbox для родителя */
  flex-direction: column; /* Располагаем дочерние элементы вертикально */
  align-items: center;   /* Центрируем дочерние элементы по горизонтали */
  justify-content: center; /* Центрируем дочерние элементы по вертикали (опционально) */
  height: 400px;         /* Высота родительского блока (регулируйте по необходимости) */
  width: 400px;          /* Ширина родительского блока (регулируйте по необходимости) */
}

