  margin: 50px auto; /* Отступы и центрирование */
}

.inner-frame3 {
  width: 150px; /* Ширина внутреннего контейнера (меньше внешнего) */
  height: 100px; /* Высота внутреннего контейнера */
  border: 1px dotted purple; /* Пунктирная фиолетовая рамка */
  position: absolute; /* Абсолютное позиционирование внутри внешнего контейнера */
  top: 50%; /* Центрируем по вертикали */
  left: 50%; /* Центрируем по горизонтали */
  transform: translate(-50%, -50%); /* Корректировка центрирования */
}
